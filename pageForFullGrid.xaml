<Page x:Class="UP_3._1.pageForFullGrid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP_3._1"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="pageForFullGrid">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="fullDataGrid" Grid.Row="1" Margin="15,0,15,0" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя Клиента" Binding="{Binding Clients.ClientName}" />
                <DataGridTextColumn Header="Фамилия Клиента" Binding="{Binding Clients.ClientSurname}" />
                <DataGridTextColumn Header="Отчество Клиента" Binding="{Binding Clients.ClientMiddlename}" />
                <DataGridTextColumn Header="Номер Телефона" Binding="{Binding Clients.PhoneNumber}" />
                <DataGridTextColumn Header="Дата Заказа" Binding="{Binding Orders.OrderDate}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
